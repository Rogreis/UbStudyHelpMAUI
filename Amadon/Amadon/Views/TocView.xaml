<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Amadon.Views.TocTableView">

    <ScrollView>
        <VerticalStackLayout Spacing="10">



            <Label Text="Table of Contents" FontSize="24" FontAttributes="Bold"/>
            <TableView>
                <TableRoot>
                    <TableSection>
                        <TextCell Text="" Detail="" />
                    </TableSection>
                </TableRoot>
            </TableView>
            <mct:Expander Direction="Down" x:Name="TocExpander">
            </mct:Expander>

        </VerticalStackLayout>
    </ScrollView>

</ContentView>
