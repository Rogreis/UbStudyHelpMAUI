
<textarea class="form-control text-white bg-dark" rows="20" @bind="LogText"  readonly></textarea>

@code {

    [Parameter]
    public string LogText { get; set; } = "";

    private bool _visibility = true;


    public void AppendLogText(string message)
    {
        LogText += message + "\n";
        StateHasChanged();
    }

}
