@using Amadon.Controls.Help

<style>

    .helpButton {
        font-size: 70%; /* decrease the font size to 80% of the current size */
    }

    .centered-bar {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%; /* or any height you want */
    }

    .imageFull
    {
        width:430px;
        height:300px;
    }

    .imageSmall 
    {
        width: 300px;
        height: 200px;
    }

    .imageMenubar {
        width: 430px;
        height: 110px;
    }


    table, th, td {
        border: 0px;
    }

    h3, h4
    {
        color:gold;
    }

</style>

<HelpBar></HelpBar>

@if (@CurrentHelpPageName == AmandonHelpPageNames.StartingHelp)
{
    <StartHelp></StartHelp>
}


@if (@CurrentHelpPageName == AmandonHelpPageNames.TocHelp)
{
    <TocHelp></TocHelp>
}

@if (@CurrentHelpPageName == AmandonHelpPageNames.IndexHelp)
{
    <IndexHelp></IndexHelp>
}

@if (@CurrentHelpPageName == AmandonHelpPageNames.SearchHelp)
{
    <SearchHelp></SearchHelp>
}

@if (@CurrentHelpPageName == AmandonHelpPageNames.TrackHelp)
{
    <TrackHelp></TrackHelp>
}

@if (@CurrentHelpPageName == AmandonHelpPageNames.SettingsHelp)
{
    <SettingsHelp></SettingsHelp>
}


@if (@CurrentHelpPageName == AmandonHelpPageNames.MenuBarHelp)
{
    <MenuBarHelp></MenuBarHelp>
}

<HelpBar></HelpBar>

@code {
    private string CurrentHelpPageName = AmandonHelpPageNames.StartingHelp;


    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        AmadonEvents.OnShowHelpPage += OnShowHelp;
    }

    private void OnShowHelp(string newHelpPAge)
    {
        CurrentHelpPageName = newHelpPAge;
        StateHasChanged();
    }


}
